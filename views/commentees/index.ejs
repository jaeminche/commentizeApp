<% include ../partials/header %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>COMMENTIZE</h1>
      <p>Upload any photo or story and get it commented!</p>
      <p>
        <a class="btn btn-primary btn-lg" href="/commentees/new"
          >Add New Commentee</a
        >
      </p>
    </div>
  </header>

  <div class="row">
    <div class="col-lg-12">
      <h3>Our Most Popular Commentee</h3>
    </div>
  </div>

  <div class="row text-center" id="commentee-grid">
    <% commentees.forEach(function(commentee) { %>
    <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
      <div class="card">
        <img
          src="<%= commentee.image %>"
          class="card-img-top"
          alt="<%= commentee.name %>"
        />
        <div class="card-body">
          <h5 class="card-title"><%= commentee.name %></h5>
          <a href="/commentees/<%= commentee._id %>" class="btn btn-primary"
            >More Info</a
          >
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>

<% include ../partials/footer %>
