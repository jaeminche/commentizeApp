<% include ../partials/header %>

<div class="container">
    <div class="">
        <h1 style="text-align: center;">Edit <%= commentee.name %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/commentees/<%= commentee._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="commentee[name]" value="<%= commentee.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="commentee[image]" value="<%= commentee.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="commentee[description]" value="<%= commentee.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>                    
                </div>
            </form>
            <a href="/commentees">Go back</a> 
        </div>
    </div>
</div>

<% include ../partials/footer %>